<main class="home-container">
    <h1>Conheças alguns dos nossos <span>Pensamentos</span>:</h1>
    <div class="search">
        <form action="/" method="get" class="search-input">
            <input type="text" name="search" placeholder="Está buscando por algo?" {{#if search}} value="{{search}}" {{/if}}>
            <button>Buscar</button>
        </form>
        <div class="search-option">
            <span>Ordenar por:</span>
            <form action="/" method="get">
                {{#if search}}
                    <input type="hidden" name="search" value="{{search}}">  
                {{/if}}
                <input type="hidden" name="order" value="new">
                <button type="submit">Mais novos</button>
            </form>
            <form action="/" method="get">
                {{#if search}}
                    <input type="hidden" name="search" value="{{search}}">  
                {{/if}}
                <input type="hidden" name="order" value="old">
                <button>Mais antigos</button>
            </form>
            <a href="/">Limpar</a>
        </div>
    </div>
    {{#each toughts}}
        <div class="post">
            <p class="post-title">"{{this.title}}"</p>
            <p class="author">por <span>{{this.User.email}}</span></p>
        </div>
    {{/each}}

    {{#unless toughts}}
            <span>Ainda não há nenhum pensamento cadastrado, crie o seu <a href="/toughts/criar">clicando aqui</a></span>
    {{/unless }}
</main>